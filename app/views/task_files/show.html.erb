<%= turbo_frame_tag "file" do %>
  <div class="w-full">
    <% if @file.video? %>
      <video controls>
        <source src="<%=url_for(@file)%>" type="video/mp4">
      </video>
    <% elsif @file.image? %>
      <img src="<%=url_for(@file)%>" alt="image file">
    <% else %>
      <iframe src="<%= url_for(@file) %>" width="100%" height="800"></iframe>
    <% end %>
  </div>
<% end %>
