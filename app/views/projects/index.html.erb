<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Projects</h1>
    <%= link_to 'New project', new_project_path,
      class: "btn-secondary px-5 py-3",
      data: {
        action: "click->modal#open",
        turbo_frame: "modal",
      } %>
  </div>
  <div id="projects" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <%= render @projects %>
  </div>
</div>
