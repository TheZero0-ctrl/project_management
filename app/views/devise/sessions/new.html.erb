<div class="flex justify-center">
  <div class="bg-white shadow-md rounded-lg p-8 min-w-fit w-1/3">
  <h2 class="text-2xl font-semibold mb-6">Log in to your account</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-6"}) do |f| %>
    <div>
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent1 focus:ring focus:ring-accent1 focus:ring-opacity-50" %>
    </div>
    <div>
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-accent1 focus:ring focus:ring-accent1 focus:ring-opacity-50" %>
    </div>
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= f.check_box :remember_me, class:"focus:ring-accent1 h-4 w-4 text-accent1 border-gray-300 rounded" %>
        <%= f.label :remember_me, class:"ml-2 block text-sm text-gray-900"%>
      </div>
      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class:"font-medium text-accent1 hover:text-accent2" %>
      </div>
    </div>
    <div class="flex justify-between">
      <%= f.submit "Log in", class:"btn bg-accent1 hover:bg-accent2 text-white font-bold py-1 px-4 rounded focus:outline-none focus:shadow-outline-accent1" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-secondary py-1 px-4" %>
    </div>
  <% end %>
</div>
</div>

